@model MedicalView.ViewModels.PatientProblem

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h2 class="mb-4">Create PatientProblem</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="PatientProblems" class="needs-validation" novalidate>
        <div class="row">
            <!-- Name -->
            

            <!-- Degree -->
            <div class="col-md-6 mb-3">
                <label asp-for="PatientId" class="form-label">Patient</label>
                <select asp-for="PatientId" asp-items="@ViewBag.PatientId" class="form-select">
                    <option value="0">Select Patient</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Institute -->
            <div class="col-md-6 mb-3">
                <label asp-for="ProblemId" class="form-label">Problem</label>
                <select asp-for="ProblemId" asp-items="@ViewBag.ProblemId" class="form-select">
                    <option value="0">Select Problem</option>
                </select>
                <span asp-validation-for="ProblemId" class="text-danger"></span>
            </div>
            
        <div class="d-flex justify-content-end">
            <!-- Buttons -->
            <button type="submit" class="btn btn-primary me-2">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
